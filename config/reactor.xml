<reactor>
	<config>
		<project value="Scratch" />
		<dsn value="scratch" />
		<type value="mssql" />
		<mapping value="/reactorData" />
		<mode value="always" />
		<!-- These config values are not required -->
		<!-- <username value="" />
		<password value="" /> -->
	</config>

	<objects>
		<object name="user">
			<hasMany name="user" alias="forwardUser">
				<link name="relatedUser" from="forwardUser" to="forwardRelation" />
			</hasMany>
			<hasMany name="user" alias="relatedTo">
				<link name="relatedUser" from="backwardUser" to="backwardRelation" />
			</hasMany>
		</object>
		
		<object name="relatedUser">
			<!-- forward -->
			<hasOne name="user" alias="forwardUser">
				<relate from="userId1" to="userId" />
			</hasOne>
			<hasOne name="user" alias="forwardRelation">
				<relate from="userId2" to="userId" />
			</hasOne>
			
			<!-- backward -->
			<hasOne name="user" alias="backwardUser">
				<relate from="userId2" to="userId" />
			</hasOne>
			<hasOne name="user" alias="backwardRelation">
				<relate from="userId1" to="userId" />
			</hasOne>
		</object>
		
	</objects>
</reactor>