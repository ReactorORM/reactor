<reactor>
	<config>
		<dsn value="ContactManager2" />
		<type value="mysql" />
		<mapping value="/ContactManagerData" />
		<mode value="development" />
		<!-- These config values are not required -->
		<!-- <username value="always" />
		<password value="always" /> -->
	</config>

	<objects>
		<object name="Contact">
			<hasMany name="Address">
				<relate from="contactId" to="contactId" />
			</hasMany>
			<hasMany name="EmailAddress">
				<relate from="contactId" to="contactId" />
			</hasMany>
			<hasMany name="PhoneNumber">
				<relate from="contactId" to="contactId" />
			</hasMany>			
		</object>
		
		<object name="Address">
			<hasOne name="State">
				<relate from="stateId" to="stateId" />
			</hasOne>
			<hasOne name="Country">
				<relate from="countryId" to="countryId" />
			</hasOne>
		</object>
	</objects>
</reactor>